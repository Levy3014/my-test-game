<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Simple Move Square Game</title>
  <style>
    body {
      margin: 0;
      overflow: hidden;
      background: #222;
    }
    #game {
      width: 400px;
      height: 400px;
      background: #444;
      margin: 20px auto;
      position: relative;
    }
    #player {
      width: 40px;
      height: 40px;
      background: red;
      position: absolute;
      top: 180px;
      left: 180px;
    }
  </style>
</head>
<body>
  <div id="game">
    <div id="player"></div>
  </div>

  <script>
    const player = document.getElementById('player');
    let x = 180;
    let y = 180;
    const speed = 10;

    window.addEventListener('keydown', (e) => {
      switch (e.key) {
        case 'ArrowUp':
          y = Math.max(0, y - speed);
          break;
        case 'ArrowDown':
          y = Math.min(360, y + speed);
          break;
        case 'ArrowLeft':
          x = Math.max(0, x - speed);
          break;
        case 'ArrowRight':
          x = Math.min(360, x + speed);
          break;
      }
      player.style.top = y + 'px';
      player.style.left = x + 'px';
    });
  </script>
</body>
</html>
